<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                    android:angle="0"
                    android:centerY="0.5"
                    android:endColor="#8A0088AA"
                    android:centerColor="#8AFFFFFF"
                    android:startColor="#8AFF8800"/>
