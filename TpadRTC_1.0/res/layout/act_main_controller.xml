        <ImageButton
         android:id="@+id/slid_preview_handle_open"
         android:layout_width="@dimen/preview_menu_handler_width"
         android:layout_height="@dimen/preview_menu_handler_height"
         android:src="@drawable/ic_handler_bottom"
         android:background="@android:color/transparent"
         android:contentDescription="@string/app_name"/>

        <RelativeLayout
                android:id="@+id/slid_preview_content"
                style="@style/ble_controller_BG_STYLE"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/slid_preview_handle_close"
                    android:layout_width="@dimen/preview_menu_handler_width"
                    android:layout_height="@dimen/preview_menu_handler_height"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_handler_bottom"/>

            <ImageView
                    android:id="@+id/img_controller_preview_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slid_preview_handle_close"
                    android:layout_marginTop="@dimen/preview_menu_margin_top"
                    android:gravity="center_horizontal"
                    android:src="@drawable/ic_menu_title"/>

            <include
                    android:layout_width="@dimen/preview_menu_width"
                    android:layout_height="@dimen/preview_menu_height"
                    android:layout_below="@id/img_controller_preview_menu"
                    android:layout_centerInParent="true"
                    layout="@layout/part_preview_layout_menu"/>
        </RelativeLayout>
    </jp.tpadsz.ihome.deprview.SlidingDrawer>

   

