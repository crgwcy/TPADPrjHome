    <CheckBox
            android:id="@+id/btn_operation_all_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
   		    android:layout_alignParentBottom="true"
   		    android:layout_marginLeft="@dimen/preview_expand_func_padding"
   		    android:layout_marginBottom="@dimen/preview_func_padding"
            android:button="@drawable/ic_display_connect_all"/>
    
    <CheckBox
            android:id="@+id/btn_operation_change_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
   		    android:layout_alignParentBottom="true"
   		    android:layout_marginRight="@dimen/preview_expand_func_padding"
   		    android:layout_marginBottom="@dimen/preview_func_padding"
            android:button="@drawable/ic_display_changecolor"/>

    <LinearLayout
            android:id="@+id/layout_preview_func"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_operation_all_connect"
            android:layout_marginBottom="@dimen/preview_func_margin"
            android:orientation="vertical"
            android:padding="@dimen/preview_func_padding">

        <include layout="@layout/part_preview_layout_scene"/>
    </LinearLayout>

