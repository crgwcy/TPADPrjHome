<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_ble_bg" >

    <LinearLayout
        android:id="@+id/layout_display_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/display_setting_padding" >

        <ImageButton
            android:id="@+id/btn_display_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_display_confirm" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_display_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_display_selected_type" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_display_setting"
        android:layout_below="@id/layout_display_title"
        android:paddingBottom="@dimen/display_preview_padding_col"
        android:paddingTop="@dimen/display_preview_padding_col" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_display_selected_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </LinearLayout>

</RelativeLayout>