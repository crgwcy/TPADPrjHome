<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_menu_bg_color" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="@string/video_call"
        android:textSize="25sp"
        android:typeface="monospace"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        />    
    <ImageView 
        android:id="@id/call_icon_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/visitor_default_head"
        android:layout_marginTop="0dp"
        android:layout_gravity="center" 
        android:layout_weight="1"       
        android:contentDescription="@string/app_name"
        />
    
    
    <TextView
        android:id="@id/call_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_gravity="center"     
        android:text=""
        android:textSize="30sp"
        android:layout_marginTop="0dp"
        
         />
    
<!--      <Button
        android:id="@id/cancel_btn_id"
        android:text="@string/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@color/rosybrown"
        android:layout_gravity="center" 
        /> -->
		<ImageButton
        android:id="@id/cancel_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="#00000000"
        android:src="@drawable/decline"
        android:layout_gravity="center_horizontal" 
        android:paddingBottom="20dp"
        android:paddingTop="20dp"        
        />        
         
</LinearLayout>

