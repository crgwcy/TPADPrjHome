<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/scanning_layout_BG_STYLE">


    <ImageView
            android:id="@+id/img_infor_about_title"
            android:src="@drawable/ic_infor_about_title"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/infor_title_margin_top"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/txt_infor_about_version"
            android:layout_below="@id/img_infor_about_title"
            android:text="hello"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textSize="@dimen/infor_version_font_size"
            android:textColor="@color/infor_version_font_color"
            android:layout_marginTop="@dimen/infor_version_margin_top"
            android:layout_height="wrap_content"/>


    <ImageButton
            android:id="@+id/btn_infor_about_update"
            style="@style/ble_transparent_center_bg_IMGBTN_STYLE"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/infor_update_margin_bottom"
            android:src="@drawable/ic_btn_update"/>
</RelativeLayout>