<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/img_timer_edit_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_repeate_monday"/>

    <ImageView
            android:id="@+id/img_timer_edit_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_repeate_tuesday"/>

    <ImageView
            android:id="@+id/img_timer_edit_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_repeate_wednesday"/>

    <ImageView
            android:id="@+id/img_timer_edit_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_repeate_thursday"/>

    <ImageView
            android:id="@+id/img_timer_edit_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_repeate_friday"/>

    <ImageView
            android:id="@+id/check_timer_edit_saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_repeate_saturday"/>

    <ImageView
            android:id="@+id/img_timer_edit_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_timer_repeate_sunday"/>


</LinearLayout>