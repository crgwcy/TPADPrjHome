<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f3a39"
    android:orientation="vertical"
    >
	<LinearLayout    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:orientation="horizontal"
    > 
    <ImageButton
        android:id="@id/camera_list_ret_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/set_ret_btn" >
    </ImageButton>
    <TextView
        android:id="@id/camera_list_tittle_id" 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:text="Camera List"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textSize="25sp"    
        />
	</LinearLayout>   
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="LIST ITEMS"
	    android:background="#3f3d39" 
	    android:paddingTop="15dp"
	    android:paddingBottom="5dp"
	    android:textSize="22sp"
	    android:gravity="center_horizontal"	    
	    />
