<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/ble_controller_BG_STYLE"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/layout_map_controller_title"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/map_controller_title_padding"
            android:paddingRight="@dimen/map_controller_title_padding"
            android:layout_height="@dimen/map_controller_title_height">

        <ImageView
                android:id="@+id/img_map_controller_indicate"
                android:layout_width="@dimen/item_preview_indicate_width"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent"/>

        <ImageButton
                android:id="@+id/imgbtn_map_controller_all"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_map_controller_all"
                android:layout_centerVertical="true"
                style="@style/ble_transparent_bg_IMGBTN_STYLE"/>

        <TextView
                android:layout_toRightOf="@id/img_map_controller_indicate"
                android:layout_toLeftOf="@id/imgbtn_map_controller_all"
                android:id="@+id/txt_map_controller_title"
                android:layout_width="match_parent"
                android:textSize="@dimen/map_controller_title_font_size"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/map_controller_view_padding"
            android:layout_height="wrap_content">

        <jp.co.odelic.smt.remote03.act.view.MapControllerView
                android:id="@+id/map_controller_view"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_marginTop="@dimen/map_controller_func_margin_top"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_map_controller_func"
            android:orientation="vertical">

        <include layout="@layout/item_operation_expand_func"/>

        <LinearLayout
                android:layout_marginTop="@dimen/map_controller_seek_margin_top"
                android:id="@+id/layout_seek_spot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_seek_layout_padding_ver"
                android:paddingTop="@dimen/item_seek_layout_padding_ver"
                android:paddingLeft="@dimen/item_seek_layout_padding_hor_map"
                android:paddingRight="@dimen/item_seek_layout_padding_hor_map">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:layout_weight="2"
                       android:src="@drawable/ic_linear_display_spot_txt"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/ic_linear_display_spot_weak"/>

            <SeekBar
                    android:id="@+id/seek_item_operation_spot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="12"
                    android:max="100"
                    android:maxHeight="3dp"
                    android:minHeight="3dp"
                    android:progressDrawable="@drawable/progress_brightness_gradient"
                    android:thumb="@drawable/ic_linear_display_spot_nonius"
                    android:thumbOffset="0dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/ic_linear_display_spot_strong"/>
        </LinearLayout>
        <jp.tpadsz.ihome.singleradio.CustomCheckBox
	            android:id="@+id/btn_operation_expand_func_map_connect"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/preview_connect_padding"
	            android:layout_marginBottom="@dimen/preview_connect_padding"
	            android:gravity="center"
	            android:layout_weight="1"
	            android:button="@drawable/ic_display_connect_single"/>
    </LinearLayout>
</LinearLayout>