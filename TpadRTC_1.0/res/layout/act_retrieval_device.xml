<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scanning_layout_BG_STYLE" >

    <include
        android:id="@+id/include_scanning_title"
        style="@style/scanning_title_include_STYLE"
        layout="@layout/part_scanning_layout_title" />

    <include
        android:id="@+id/include_scanning_buttons"
        style="@style/scanning_buttons_include_STYLE"
        layout="@layout/part_confirm_buttons" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/include_scanning_buttons"
        android:layout_below="@id/include_scanning_title"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imgbtn_search_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/act_retrieval_search_btn"
            android:src="@drawable/act_retrieval_search_txt" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/act_retrieval_search_desc" />
    </RelativeLayout>

</RelativeLayout>